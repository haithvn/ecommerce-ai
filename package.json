{
  "name": "ecommerce-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "next dev -p 3000",
    "dev:api": "ts-node --project tsconfig.server.json src/server.ts",
    "dev": "concurrently -n WEB,API -c green,blue \"npm:dev:web\" \"npm:dev:api\"",
    "build:web": "next build",
    "build:api": "tsc -p tsconfig.server.json",
    "build": "npm run build:web && npm run build:api",
    "start:web": "next start -p 3000",
    "start:api": "node dist/server.js",
    "start": "concurrently -n WEB,API -c green,blue \"npm:start:web\" \"npm:start:api\"",
    "lint": "eslint",
    "test": "cross-env NODE_ENV=test jest --runInBand"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "next": "15.5.2",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.15.5",
    "@types/react": "19.1.12",
    "@types/supertest": "^2.0.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.12",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
